#!/bin/bash
# pinst: install port file

# tmwin: open a titled window in a tmux socket
# open tmux window
function tmwin() { 
prog=$1
shift 1
exe="$@"
if [[ "x$(which tmux)" != "x"  ]] ; then
  # tmux exists
  tmux rename-window "$prog"
  tmux -f $TMUX_CONF_TMWIN -L tmwin new -s $prog -n $prog "$exe"
  tmux setw automatic-rename on > /dev/null
else 
  # tmux doesn't exists
  $exe
fi
}

tmux rename-window pinst
tmwin port-install 'printf "\033]2;$(hostname -s) > pinst: '"$@"' \033\\" ; sudo port install '"$@"' ; read -p "Press any key to continue..." -n1 -s'
tmux setw automatic-rename on
