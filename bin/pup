#!/bin/bash
# pup

# setup safe exit
# also change TERM so that title printing is allowed
trap 'killListener' EXIT
OLD_TERM=$TERM
function killListener() {
  echo "cleaning up TERM=$OLD_TERM"
  export TERM=$OLD_TERM
}
TERM_POSTFIX=${TERM#*-}
if [[ "x$TERM_POSTFIX" == "x" ]] ; then
  TERM_POSTFIX=
else
  TERM_POSTFIX="-$TERM_POSTFIX"
fi
export TERM="xterm$TERM_POSTFIX"

# output file
PUP_FILE="$HOME/.port.updated"

# tmwin: open a titled window in a tmux socket
# open tmux window
function tmwin() { 
prog=$1
shift 1
exe="$@"
if [[ "x$(which tmux)" != "x"  ]] ; then
  # tmux exists
  tmux rename-window "$prog"
  tmux -f $TMUX_CONF_TMWIN -L tmwin new -s $prog -n $prog "$exe"
  tmux setw automatic-rename on > /dev/null
else 
  # tmux doesn't exists
  $exe
fi
}
# updated desired, so remove the latest update file
rm -f $PUP_FILE* &> /dev/null 

tmwin portupdate 'sudo hili portupdate'" $PUP_FILE" 
if [[ -e ${PUP_FILE}.exit ]] ; then
  #update completed successfully

  #port installed | awk '{print $1}' | sed '1d' | tr '[:upper:]' '[:lower:]' | uniq  > $LOGS_DIR/port
  #port installed active | sed '1d' | awk '{ print $1,$2}'  > $LOGS_DIR/port
  port installed active | sed '1d' | awk '{ print $1,$2}' | tr '[:upper:]' '[:lower:]' > $LOGS_DIR/port

  rm -f ${PUP_FILE}.exit &> /dev/null
fi 

